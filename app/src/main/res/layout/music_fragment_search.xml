<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorText"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:weightSum="7"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_music_search"
            android:layout_weight="6"
            android:hint="搜索"
            android:padding="8dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:textColorHint="@color/colorText"
            android:drawableRight="@mipmap/play_3x"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_music_search"
            android:clickable="true"
            android:layout_weight="1"
            android:src="@color/colorTextActive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_music_search_result"
        android:text="搜索结果"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="18dp"
        android:drawableLeft="@mipmap/thumb"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lv_music_search"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</LinearLayout>
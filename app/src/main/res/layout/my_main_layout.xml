<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBlack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.byids.hy.testpro.View.MyCustomViewPager
        android:id="@+id/id_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        </com.byids.hy.testpro.View.MyCustomViewPager>


        <RelativeLayout
            android:id="@+id/rl_music"
            android:paddingTop="18dp"
            android:paddingRight="18dp"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_music_back"
                android:src="@mipmap/black_cycle"
                android:alpha="0.6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_music_icon"
                android:src="@mipmap/music_main_3x"
                android:layout_alignTop="@+id/iv_music_back"
                android:scaleType="center"
                android:layout_alignBottom="@+id/iv_music_back"
                android:layout_alignLeft="@+id/iv_music_back"
                android:layout_alignRight="@+id/iv_music_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_media"
            android:padding="18dp"
            android:clickable="true"
            android:layout_below="@id/rl_music"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_media_back"
                android:src="@mipmap/black_cycle"
                android:alpha="0.6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_sleep_moon"
                android:src="@mipmap/sleep_main_3x"
                android:layout_alignTop="@+id/iv_media_back"
                android:scaleType="center"
                android:layout_alignBottom="@+id/iv_media_back"
                android:layout_alignLeft="@+id/iv_media_back"
                android:layout_alignRight="@+id/iv_media_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_sleep_stars"
                android:visibility="invisible"
                android:src="@mipmap/sleep_stars_3x"
                android:layout_alignTop="@+id/iv_media_back"
                android:scaleType="center"
                android:layout_alignBottom="@+id/iv_media_back"
                android:layout_alignLeft="@+id/iv_media_back"
                android:layout_alignRight="@+id/iv_media_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_main_blank_1"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />
        <TextView
            android:id="@+id/tv_button_come_home"
            android:layout_below="@id/tv_main_blank_1"
            android:text="回家"
            android:clickable="true"
            android:textSize="16sp"
            android:textColor="@color/colorCutOffLine2"
            android:background="@drawable/custom_button_back"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_button_go_out"
            android:layout_below="@id/tv_button_come_home"
            android:text="离家"
            android:clickable="true"
            android:textSize="16sp"
            android:textColor="@color/colorCutOffLine2"
            android:background="@drawable/custom_button_back"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_house_owner_name"
            android:text="HongYang的家"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:padding="20dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_house_time_right"
            android:layout_above="@id/tv_house_owner_name"
            android:text="下午"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_house_time_left"
            android:layout_above="@id/tv_house_owner_name"
            android:layout_toLeftOf="@id/tv_house_time_right"
            android:text="17:04"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:paddingRight="10dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_house_temp"
            android:layout_above="@id/tv_house_time_left"
            android:text="27℃"
            android:textSize="60sp"
            android:textColor="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:paddingRight="30dp"
            android:paddingBottom="20dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_black_front"
            android:src="@color/colorBlack"
            android:alpha="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>
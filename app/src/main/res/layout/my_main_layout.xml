<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBlack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.byids.hy.testpro.View.MyCustomViewPager
        android:id="@+id/id_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        </com.byids.hy.testpro.View.MyCustomViewPager>


        <RelativeLayout
            android:id="@+id/rl_music"
            android:paddingTop="18dp"
            android:paddingRight="18dp"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_music_back"
                android:src="@drawable/alpha_black_cycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_music_icon"
                android:src="@mipmap/music_main_3x"
                android:layout_alignTop="@+id/iv_music_back"
                android:scaleType="center"
                android:layout_alignBottom="@+id/iv_music_back"
                android:layout_alignLeft="@+id/iv_music_back"
                android:layout_alignRight="@+id/iv_music_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_media"
            android:padding="18dp"
            android:clickable="true"
            android:layout_below="@id/rl_music"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_media_back"
                android:src="@drawable/alpha_black_cycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_media_icon"
                android:src="@mipmap/sleep_main_3x"
                android:layout_alignTop="@+id/iv_media_back"
                android:scaleType="center"
                android:layout_alignBottom="@+id/iv_media_back"
                android:layout_alignLeft="@+id/iv_media_back"
                android:layout_alignRight="@+id/iv_media_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_black_front"
            android:src="@color/colorBlack"
            android:alpha="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>
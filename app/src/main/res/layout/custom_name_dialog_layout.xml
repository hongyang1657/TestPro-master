<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_custom_name_title"
        android:text="请输入名称"
        android:padding="16dp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:background="@drawable/custom_name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/colorLoginBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_custom_name"
            android:textSize="20sp"
            android:maxLength="4"
            android:layout_margin="16dp"
            android:padding="4dp"
            android:gravity="center_vertical"
            android:background="@drawable/custom_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:background="@color/colorText"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_custom_name_cancel"
            android:text="取消"
            android:textColor="@color/colorText"
            android:clickable="true"
            android:background="@drawable/custom_name_cancel"
            android:padding="14dp"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:background="@color/colorText"
            android:layout_width="1px"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_custom_name_enter"
            android:text="保存"
            android:textColor="@color/colorTextActive"
            android:clickable="true"
            android:background="@drawable/custom_name_enter"
            android:textSize="16sp"
            android:padding="14dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
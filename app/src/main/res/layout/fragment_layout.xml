<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.byids.hy.testpro.View.MyCustomScrollView
        android:clickable="false"
        android:id="@+id/id_scroll"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_menu"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_set"
                    android:clickable="true"
                    android:text="设置"
                    android:textSize="12sp"
                    android:textColor="@color/colorText"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:padding="10dp"
                    android:drawableTop="@mipmap/allroomcontrol_shezhi_s"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_monitoring"
                    android:clickable="true"
                    android:text="监控"
                    android:textSize="12sp"
                    android:textColor="@color/colorText"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:padding="10dp"
                    android:drawableTop="@mipmap/jiankong_s"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_lock"
                    android:clickable="true"
                    android:text="门锁"
                    android:textSize="12sp"
                    android:textColor="@color/colorText"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:padding="10dp"
                    android:drawableTop="@mipmap/allroomcontrol_mensuo_s"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_security"
                    android:clickable="true"
                    android:text="布防"
                    android:textSize="12sp"
                    android:textColor="@color/colorText"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:padding="10dp"
                    android:drawableTop="@mipmap/allroomcontrol_bufang_s"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:id="@+id/id_iv1"
                android:layout_below="@id/linear_menu"
                android:src="@mipmap/back_4"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/id_iv"
                android:layout_below="@id/linear_menu"
                android:src="@mipmap/bg_img_2"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </com.byids.hy.testpro.View.MyCustomScrollView>

    <com.byids.hy.testpro.View.MyPullUpScrollView
        android:id="@+id/scroll_pull_up"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_pull_up_scroll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_up_menu_click"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="78dp">

                <Button
                    android:id="@+id/bt_shezhi"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/bt_jiankong"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/bt_mensuo"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/bt_bufang"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_room_name"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="170dp">
                <TextView
                    android:id="@+id/tv_blank"
                    android:text="客厅"
                    android:textSize="38sp"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_switch_room_icon"
                    android:src="@mipmap/switch_room_3x"
                    android:clickable="true"
                    android:layout_alignBottom="@+id/tv_blank"
                    android:layout_alignTop="@+id/tv_blank"
                    android:layout_toRightOf="@+id/tv_blank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_xiaojianjian"
                    android:src="@mipmap/xiaojianjian_3x"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@id/tv_blank"
                    android:layout_alignLeft="@id/tv_blank"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/colorAlphaBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_panel_name"
                    android:text="面 板"
                    android:textColor="@color/colorText"
                    android:clickable="true"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <include layout="@layout/panel_layout"/>

                <LinearLayout
                    android:id="@+id/ll_scene_name"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_scene_name"
                        android:text="场 景"
                        android:textColor="@color/colorText"
                        android:clickable="true"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_scene_custom"
                        android:text="自定义"
                        android:background="@drawable/custom_button_back"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorText"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <include layout="@layout/scene_layout" />

                <TextView
                    android:id="@+id/tv_light"
                    android:text="灯 光"
                    android:textColor="@color/colorText"
                    android:clickable="true"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <include layout="@layout/light_layout"/>

                <TextView
                    android:id="@+id/tv_curtain"
                    android:text="窗 帘"
                    android:textColor="@color/colorText"
                    android:clickable="true"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <include layout="@layout/curtain_layout"/>

                <TextView
                    android:id="@+id/tv_television"
                    android:text="电 视"
                    android:textColor="@color/colorText"
                    android:clickable="true"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <include layout="@layout/television_layout"/>

                <TextView
                    android:id="@+id/tv_air_condition"
                    android:text="空 调"
                    android:textColor="@color/colorText"
                    android:clickable="true"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include layout="@layout/air_condition_layout"/>
                <include layout="@layout/air_condition_details_layout" />
                <TextView
                    android:id="@+id/tv_main_blank"
                    android:visibility="gone"
                    android:text="卷 帘"
                    android:textColor="#00000000"
                    android:clickable="true"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <!--<ImageView
                    android:id="@+id/iv_bottom"
                    android:background="@mipmap/mohu"
                    android:layout_width="match_parent"
                    android:layout_height="500dp" />-->
            </LinearLayout>


        </LinearLayout>
    </com.byids.hy.testpro.View.MyPullUpScrollView>

    <RelativeLayout
        android:id="@+id/rl_bt_menu"
        android:focusable="true"
        android:layout_margin="3dp"
        android:clickable="true"
        android:background="@drawable/home_button_back"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_home_icon"
            android:src="@mipmap/green_home_3x"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_room_name"
            android:text="客厅"
            android:textColor="@color/colorWhite"
            android:textSize="26sp"
            android:alpha="0"
            android:gravity="center"
            android:layout_alignBottom="@id/iv_home_icon"
            android:layout_alignTop="@id/iv_home_icon"
            android:layout_alignRight="@id/iv_home_icon"
            android:layout_alignLeft="@id/iv_home_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_state_light"
            android:layout_margin="4dp"
            android:src="#00000000"
            android:layout_width="10dp"
            android:layout_height="10dp" />
    </RelativeLayout>

</RelativeLayout>